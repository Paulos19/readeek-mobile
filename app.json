{
  "expo": {
    "name": "readeek-mobile",
    "slug": "readeek-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "readeek",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#09090b"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.paulos19.readeekmobile",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Precisamos do microfone para enviar mensagens de voz.",
        "NSPhotoLibraryUsageDescription": "Precisamos acessar suas fotos para enviar imagens.",
        "NSPhotoLibraryAddUsageDescription": "Precisamos permissão para salvar imagens na sua galeria."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#09090b"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.paulo_s19.readeekmobile",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-web-browser",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "O app precisa acessar suas fotos para enviar imagens."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "O app precisa acessar seu microfone para enviar áudios."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Permita o acesso para salvar imagens na sua galeria.",
          "savePhotosPermission": "Permita o acesso para salvar imagens na sua galeria.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "34595154-54dd-499b-a328-13119de1fbc0"
      }
    }
  }
}